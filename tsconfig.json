{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"noUnusedParameters": true,
		"outDir": "./dist",
		"strict": true,
		"sourceMap": true,
		"types": ["node"],
        "declaration": true,
        "noUnusedLocals": true,
        "removeComments": false,
		"importsNotUsedAsValues": "error",
		"target": "esnext"
	},
	"exclude": [
		"node_modules",
		"bin",
		"examples",
		"scripts"
	],
	"include": [
		"./src/**/*",
		"./test/**/*"
	]
}